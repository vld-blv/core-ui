{{#if showCheckbox}}
<td class="{{cellClass}}">
    <div class="checkbox js-checkbox">
        <svg class="svg-icons-wrp_checked svg-icons svg-icons_checked">
            <use xlink:href="#icon-checked" />
        </svg>
    </div>
</td>
{{/if}}
{{#each columns}}
<td class="grid-header-column{{#if isHidden}} {{hiddenClass}}{{/if}}" title="{{title}}"
    {{#if width}}style="min-width:{{width}};width:{{width}};" {{/if}}>
    <div class="header-column-wrp">
        {{#unless alignRight}}<div class="grid-header-column-title">{{title}}</div>{{/unless}}
	<span class="js-help-text-region collection-grid-header__help"></span>
        {{#if alignRight}}<div class="grid-header-column-title">{{title}}
        </div>{{/if}}
        {{#unless @last}}<div class="grid-header-dragger"></div>{{/unless}}
    </div>
</td>
{{/each}}
